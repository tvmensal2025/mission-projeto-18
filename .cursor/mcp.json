{
  "mcpServers": {
    "instituto-dos-sonhos-web": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-web"],
      "env": {
        "WEB_SERVER_PORT": "3000",
        "API_BASE_URL": "http://localhost:3000"
      }
    },
    "supabase-integration": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres"
      }
    },
    "browser-tools": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"],
      "env": {
        "PUPPETEER_HEADLESS": "true"
      }
    },
    "filesystem-access": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem"],
      "env": {
        "ALLOWED_DIRECTORIES": "/Users/institutodossonhos/Documents/Cursor -02/saco/mission-projeto-18"
      }
    }
  }
}